<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff212121"
    tools:context="com.example.fernandotorres.sportlog_quiz.Registro">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/logoblack" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Nombre"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:hint="Nombre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Email"
        android:layout_below="@+id/Nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:hint="Email"
        android:background="#ffffffff"
        android:layout_alignRight="@+id/Nombre"
        android:layout_alignEnd="@+id/Nombre"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Contraseña"
        android:layout_below="@+id/Email"
        android:layout_marginTop="28dp"
        android:hint="Contraseña"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/ConfirmarContraseña"
        android:layout_below="@+id/Contraseña"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:hint="Vuelva A Escribir La Contraseña"
        android:background="#ffffffff"
        android:layout_alignRight="@+id/Contraseña"
        android:layout_alignEnd="@+id/Contraseña"
        android:textColor="#ff000000" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/button"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_circulo"
        android:layout_below="@+id/ConfirmarContraseña"
        android:layout_alignRight="@+id/ConfirmarContraseña"
        android:layout_alignEnd="@+id/ConfirmarContraseña"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O Registrate Con Facebook"
        android:id="@+id/textView"
        android:layout_marginBottom="53dp"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="17dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/btn_facebook"
        android:drawableLeft="@drawable/facebook"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
