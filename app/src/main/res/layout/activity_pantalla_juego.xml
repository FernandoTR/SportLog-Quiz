<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fernandotorres.sportlog_quiz.PantallaJuego">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgrealmadrid"
        android:layout_marginTop="152dp"
        android:background="@drawable/imgrealmadrid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/tablaLayout"
        android:id="@+id/lineaLayout"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="25sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:enabled="false"
            android:id="@+id/texto"
            />
    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tablaLayout"
        >

        <TableRow>
            <Button android:width="0dp"
                android:height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r"
                android:onClick="boton1"
                android:text="R" />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="A"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/a"
                android:onClick="boton1"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="B"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:onClick="boton1"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="E"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/e"
                android:onClick="boton1"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="L"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/l"
                android:onClick="boton1"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="D"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/d"
                android:onClick="boton1"
                />

        </TableRow>
        <TableRow>
            <Button android:width="0dp"
                android:height="0dp"
                android:text="C"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/c"
                android:onClick="boton1"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="D"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/d"
                android:onClick="boton1"
                />
            <Button android:width="0dp"
                android:height="0dp"
                android:text="A"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/a"
                android:onClick="boton1"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="M"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/m"
                android:onClick="boton1"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="I"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/i"
                android:onClick="boton1"
                />
            <Button android:width="0dp"
                android:height="0dp"
                android:text="R"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r"
                android:onClick="boton1"
                />

        </TableRow>
    </TableLayout>

</RelativeLayout>
