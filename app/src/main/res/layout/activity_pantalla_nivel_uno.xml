<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="?colorPrimary"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_bar_height">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="55dp"
            android:layout_height="505dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel 1"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:layout_marginTop="45dp"
                android:textColor="#ff000000" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnRealMadrid"
                android:background="@drawable/btn_nivel"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:drawableLeft="@drawable/real" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnBarcelona"
                android:background="@drawable/btn_nivel"
                android:layout_alignTop="@+id/btnRealMadrid"
                android:layout_toRightOf="@+id/btnRealMadrid"
                android:layout_toEndOf="@+id/btnRealMadrid"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:drawableLeft="@drawable/barca" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnJuventus"
                android:background="@drawable/btn_nivel"
                android:layout_alignTop="@+id/btnBarcelona"
                android:layout_toRightOf="@+id/btnBarcelona"
                android:layout_toEndOf="@+id/btnBarcelona"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/juve" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnInter"
                android:background="@drawable/btn_nivel"
                android:layout_alignTop="@+id/btnJuventus"
                android:layout_toRightOf="@+id/btnJuventus"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:drawableLeft="@drawable/as" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnLazio"
                android:background="@drawable/btn_nivel"
                android:layout_alignTop="@+id/btnInter"
                android:layout_toRightOf="@+id/btnInter"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:drawableLeft="@drawable/asd" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button3"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btnRealMadrid"
                android:layout_alignLeft="@+id/btnRealMadrid"
                android:layout_alignStart="@+id/btnRealMadrid" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button4"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button3"
                android:layout_toLeftOf="@+id/btnJuventus"
                android:layout_toStartOf="@+id/btnJuventus" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button5"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button4"
                android:layout_alignLeft="@+id/btnJuventus"
                android:layout_alignStart="@+id/btnJuventus" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button6"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button5"
                android:layout_toLeftOf="@+id/btnLazio"
                android:layout_toStartOf="@+id/btnLazio" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button7"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button6"
                android:layout_alignLeft="@+id/btnLazio"
                android:layout_alignStart="@+id/btnLazio" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button8"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/button3"
                android:layout_alignLeft="@+id/button3"
                android:layout_alignStart="@+id/button3" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button9"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button8"
                android:layout_alignLeft="@+id/button4"
                android:layout_alignStart="@+id/button4" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button10"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button9"
                android:layout_toLeftOf="@+id/btnInter"
                android:layout_toStartOf="@+id/btnInter" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button11"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button10"
                android:layout_toLeftOf="@+id/btnLazio"
                android:layout_toStartOf="@+id/btnLazio" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button12"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button11"
                android:layout_alignLeft="@+id/button7"
                android:layout_alignStart="@+id/button7" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button13"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/button8"
                android:layout_alignLeft="@+id/button8"
                android:layout_alignStart="@+id/button8" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button14"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button13"
                android:layout_alignLeft="@+id/button9"
                android:layout_alignStart="@+id/button9" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button15"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button14"
                android:layout_alignLeft="@+id/button10"
                android:layout_alignStart="@+id/button10" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button16"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button15"
                android:layout_alignLeft="@+id/button11"
                android:layout_alignStart="@+id/button11" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button17"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button16"
                android:layout_alignLeft="@+id/button12"
                android:layout_alignStart="@+id/button12" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button18"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/button13"
                android:layout_alignLeft="@+id/button13"
                android:layout_alignStart="@+id/button13" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button19"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button18"
                android:layout_alignLeft="@+id/button14"
                android:layout_alignStart="@+id/button14" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button20"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button19"
                android:layout_alignLeft="@+id/button15"
                android:layout_alignStart="@+id/button15" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button21"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button19"
                android:layout_alignLeft="@+id/button16"
                android:layout_alignStart="@+id/button16" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button22"
                android:background="@drawable/btn_nivel"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:layout_alignTop="@+id/button21"
                android:layout_alignLeft="@+id/button17"
                android:layout_alignStart="@+id/button17" />
            </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu"
        app:theme="@style/NavigationViewTheme" />

</android.support.v4.widget.DrawerLayout>

