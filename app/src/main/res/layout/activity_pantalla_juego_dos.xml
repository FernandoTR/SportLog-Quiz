<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fernandotorres.sportlog_quiz.PantallaJuegoDos">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgrealmadrid"
        android:layout_marginTop="84dp"
        android:background="@drawable/imgbarca"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/tablaLayout"
        android:id="@+id/lineaLayout"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="25sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:enabled="false"
            android:id="@+id/texto"
            />
    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tablaLayout"
        >

        <TableRow>
            <Button android:width="0dp"
                android:height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:text="O"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="A"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="B"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="E"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="L"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="N"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

        </TableRow>
        <TableRow>
            <Button android:width="0dp"
                android:height="0dp"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textColor="#ffffffff"
                android:textStyle="bold" />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="D"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />
            <Button android:width="0dp"
                android:height="0dp"
                android:text="A"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="M"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

            <Button android:width="0dp"
                android:height="0dp"
                android:text="I"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />
            <Button android:width="0dp"
                android:height="0dp"
                android:text="R"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_letra"
                android:onClick="boton1"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>
    </TableLayout>

</RelativeLayout>
